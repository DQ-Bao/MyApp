<h2>Search Book</h2>
<form action="/books" method="get">
    <div>
        <label>Title</label>
        <input type="text" name="title" value="<%= searchOption.title %> ">
    </div>
    
    <div>
        <label>Publish After</label>
        <input type="date" name="publishAfter" value="<%= searchOption.publishAfter %> ">
    </div>
    
    <div>
        <label>Publish Before</label>
        <input type="date" name="publishBefore" value="<%= searchOption.publishBefore %> ">
    </div>
    
    <button type="submit">Search</button>
</form>
<br/>
<div>
    <% books.forEach(book => { %>
        <img height="150px" width="100px" src="<%= book.coverPath %>">
    <% }); %>
</div> 